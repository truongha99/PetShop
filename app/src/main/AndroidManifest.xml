<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hatruong.petshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.ActivityDangNhap"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"></activity>
        <activity
            android:name=".SuaThuCung"
            android:parentActivityName=".Activity.ActivityThuCung" />
        <activity
            android:name=".ThemThuCung"
            android:parentActivityName=".Activity.ActivityThuCung" />
        <activity
            android:name=".Activity.ActivityThuCung"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SuaLoaiThuCung"
            android:parentActivityName=".Activity.ActivityLoaiThuCung" />
        <activity
            android:name=".ThemLoaiThuCung"
            android:parentActivityName=".Activity.ActivityLoaiThuCung" />
        <activity
            android:name=".Activity.ActivityLoaiThuCung"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>